<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FallDetection" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/black</item>
<!--        <item name="toolbarStyle">@style/MyToolBarStyle</item>-->
        <item name="colorAccent">@color/white</item>
        <item name="background">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:colorForegroundInverse">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:actionBarSize">40dp</item>
    </style>

    <style name="Theme.FallDetection" parent="Base.Theme.FallDetection" />

    <style name="MyToolBarStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/primary_color</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:foregroundTint">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="TitleToolBarSize" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_lg</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>